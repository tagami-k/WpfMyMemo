<Window x:Class="WpfMyMemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMyMemo"
        mc:Ignorable="d"
        Title="My momo" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="MenuItemFile" Header="ファイル(_F)">
                <MenuItem Header="メニュー 1-1"/>
                <MenuItem Header="メニュー 1-2"/>
                <Separator/>
                <MenuItem Header="メニュー 1-3">
                    <MenuItem Header="メニュー 1-3-1"/>
                    <MenuItem Header="メニュー 1-3-2"/>
                </MenuItem>
                <MenuItem Header="メニュー 1-2"/>
                <Separator/>
                <MenuItem x:Name="MenuItemFileExit" Header="終了(_X)" Click="MenuItemFileExit_Click"/>
            </MenuItem>
            <MenuItem Header="編集(_E)"/>
            <MenuItem Header="設定(_S)"/>
            <MenuItem Header="ヘルプ(_H)"/>
        </Menu>
        
        <TextBox />
    </DockPanel>
</Window>
